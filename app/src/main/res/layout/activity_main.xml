<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jy.sopt.chattingsample.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/room_rcv"
        android:layout_above="@+id/create_room_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/create_room_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <EditText
            android:id="@+id/room_name_edit"
            android:layout_width="300dp"
            android:layout_height="match_parent" />

        <Button
            android:text="생성"
            android:id="@+id/create_room_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
